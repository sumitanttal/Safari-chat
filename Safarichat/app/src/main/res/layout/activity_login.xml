<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="handler" type="com.sumit.safarichat.activity.LoginActivity"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        >

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="2">
           <ImageView
               style="@style/App_Theme_Style_WW"
               android:onClick="actionBack"
               android:padding="@dimen/acticity_default_margin_10dp"
               android:src="@drawable/back"/>
       </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="@dimen/acticity_default_margin_18dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="8">
            <TextView
                style="@style/App_Theme_Style_WW"
                android:text="@string/prompt_login"

                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_size_20sp"/>
            <include
                android:id="@+id/lay_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/material_edittext"
                />
            <include
                android:id="@+id/lay_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/material_edittext"

                />
            <TextView
                style="@style/App_Theme_Style_WW"
                android:text="@string/forgot_password"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/acticity_default_margin_14dp"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="@dimen/txt_size_12sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/acticity_default_margin_14dp"
                android:text="@string/prompt_login"
                android:gravity="center"
                android:onClick="actionLogin"
                android:layout_marginLeft="@dimen/acticity_default_margin_20dp"
                android:layout_marginRight="@dimen/acticity_default_margin_20dp"
                android:paddingTop="@dimen/acticity_default_margin_10dp"
                android:paddingBottom="@dimen/acticity_default_margin_10dp"
                android:background="@drawable/grey_btn_bg"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-bold"
                android:textSize="@dimen/txt_size_16sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log In Using"
                android:textSize="@dimen/txt_size_20sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="@dimen/acticity_default_margin_20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/acticity_default_margin_14dp"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/facebook_login"
                   style="@style/App_Theme_Style_WW"
                    android:src="@drawable/fb"
                    android:onClick="actionListener"
                    android:padding="@dimen/acticity_default_margin_10dp"
                    />
                <ImageView
                    style="@style/App_Theme_Style_WW"
                    android:src="@drawable/twitter"
                    android:padding="@dimen/acticity_default_margin_10dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>